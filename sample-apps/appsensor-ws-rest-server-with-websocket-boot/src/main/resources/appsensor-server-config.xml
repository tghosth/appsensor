<?xml version="1.0" encoding="UTF-8"?>
<appsensor-server-config xmlns="https://www.owasp.org/index.php/OWASP_AppSensor_Project/xsd/appsensor_server_config_2.0.xsd">
	
	<client-application-identification-header-name>X-Appsensor-Client</client-application-identification-header-name>
	
	<geolocation enabled="false"/>
	
	<client-applications>
		<client-application>
			<name>appsensor-juice-shop-test</name>
			<roles>
				<role>ADD_EVENT</role>
				<role>ADD_ATTACK</role>
				<role>GET_RESPONSES</role>
				<role>EXECUTE_REPORT</role>	
			</roles>
		</client-application>
		<client-application>
			<name>clientui</name>
			<roles>
				<role>EXECUTE_REPORT</role>	
			</roles>
		</client-application>
	</client-applications>
	<detection-points>
		<detection-point>
			<category>Authentication Exception</category>
			<id>AE2</id>
			<!--Multiple Failed Passwords-->
			<threshold>
				<count>15</count>
				<interval unit="seconds">20</interval>
			</threshold>
			<responses>
				<response>
					<action>silentfail</action>
					<interval unit="minutes">1</interval>
				</response>
			</responses>
		</detection-point>
		<detection-point>
			<category>Authentication Exception</category>
			<id>AE8</id>
			<!--Providing Only the Username-->
			<threshold>
				<count>1</count>
				<interval unit="seconds">5</interval>
			</threshold>
			<responses>
				<response>
					<action>disable</action>
					<interval unit="minutes">1</interval>
				</response>
			</responses>
		</detection-point>
	</detection-points>

</appsensor-server-config>
